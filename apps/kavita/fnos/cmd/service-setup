#!/bin/bash

LOG_FILE="${TRIM_PKGVAR}/${TRIM_APPNAME}.log"
PID_FILE="${TRIM_PKGVAR}/${TRIM_APPNAME}.pid"

APP_DIR="${TRIM_APPDEST}"
APP_DATA_DIR="${TRIM_PKGVAR}"

SERVICE_COMMAND="$APP_DIR/bin/kavita-server $APP_DATA_DIR"
SVC_BACKGROUND=y
SVC_WRITE_PID=y

service_preuninst() {
    pkill -f "Kavita" 2>/dev/null || true
    sleep 1
    pkill -9 -f "Kavita" 2>/dev/null || true
}

service_poststop() {
    service_preuninst
}
