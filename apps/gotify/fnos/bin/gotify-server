#!/bin/sh
APP_DIR="${TRIM_APPDEST}"
APP_DATA_DIR=$1

mkdir -p "$APP_DATA_DIR/data"

cd "$APP_DIR" || exit 1

ARCH=$(uname -m | sed 's/x86_64/amd64/;s/aarch64/arm64/')
export GOTIFY_SERVER_PORT=${TRIM_SERVICE_PORT}
export GOTIFY_DATABASE_DIALECT="sqlite3"
export GOTIFY_DATABASE_CONNECTION="$APP_DATA_DIR/data/gotify.db"
exec ./gotify-linux-${ARCH}
